{
  "name": "template-nodejs",
  "version": "1.0.0",
  "description": "NodeJS Template with TypeScript, TypeORM, JWT and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "watch": "npx tsc -w",
    "build": "npx tsc --build",
    "start": "ts-node-dev --respawn --transpile-only --debug ./src/index.ts",
    "prod": "node ./dist/src/index.js",
    "test": "npm run build && jest --silent --watchAll --runInBand --config jest.config.js --detectOpenHandles",
    "test-coverage": "node_modules/.bin/jest --watchAll --runInBand --verbose --coverage",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint -c .eslintrc.js --ext .ts src --fix",
    "prettier": "npx prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n"
  },
  "author": "didjo972",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^12.0.4",
    "express": "^4.17.1",
    "helmet": "^5.0.1",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "0.2.41",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.9",
    "@types/nodemailer": "^6.4.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsdoc": "^40.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  }
}
